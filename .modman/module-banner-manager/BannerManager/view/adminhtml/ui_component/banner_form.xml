            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Thumbnails</label>
                <dataScope>control_nav_thumbs</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="lazy_load" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner_config</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Lazy Load</label>
                <dataScope>lazy_load</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="autoplay_hover_pause" sortOrder="70" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner_config</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Pause on mouse over</label>
                <dataScope>autoplay_hover_pause</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="autoplay_speed" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner_config</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Autoplay Speed</label>
                <dataScope>autoplay_speed</dataScope>
            </settings>
        </field>
        <field name="width" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner_config</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Width</label>
                <dataScope>width</dataScope>
            </settings>
        </field>
        <field name="height" sortOrder="100" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner_config</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Height</label>
                <dataScope>height</dataScope>
            </settings>
        </field>
        <field name="animate_in" sortOrder="120" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Animate In</label>
                <notice translate="true">The CSS3 animation type applied when the background animates into view.</notice>
                <dataScope>animate_in</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="T2N\BannerManager\Model\System\Config\Effects"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="animate_out" sortOrder="130" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Animate Out</label>
                <notice translate="true">The CSS3 animation type applied when the background animates out of view.</notice>
                <dataScope>animate_out</dataScope>
