    <columns name="banner_item_listing_columns">
        <selectionsColumn name="ids">
            <settings>
                <visible>false</visible>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="position">
            <settings>
                <sorting>asc</sorting>
                <visible>false</visible>
                <label translate="true">Position</label>
            </settings>
        </column>
        <column name="entity_id">
            <settings>
                <visible>false</visible>
                <sortable>false</sortable>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="image" class="T2N\BannerManager\Ui\Component\Listing\Column\Thumbnail" component="Magento_Ui/js/grid/columns/thumbnail" sortOrder="20">
            <settings>
                <altField>title</altField>
                <hasPreview>1</hasPreview>
                <label translate="true">Thumbnail</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <sortable>false</sortable>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="media_type" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="T2N\BannerManager\Model\System\Config\MediaType"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <sortable>false</sortable>
                <label translate="true">Media Type</label>
            </settings>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="T2N\BannerManager\Model\System\Config\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <sortable>false</sortable>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="update_time" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dataType>date</dataType>
                <sortable>false</sortable>
                <label translate="true">Modified</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="T2N\BannerManager\Ui\Component\Listing\Column\Banner\Item\Actions" component="T2N_BannerManager/js/grid/columns/actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
