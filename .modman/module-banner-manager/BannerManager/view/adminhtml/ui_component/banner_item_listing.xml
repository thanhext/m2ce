        <aclResource>T2N_BannerManager::banner</aclResource>
        <dataProvider class="T2N\BannerManager\Ui\Component\DataProvider" name="banner_item_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
