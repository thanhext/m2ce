<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="OSCCheckPurchaseOrderAndButtonBellowOrder">
        <annotations>
            <features value="Customize Checkout via admin"/>
            <stories value="Check Place Order With Purchase Order via the storefront"/>
            <title value="Check Place Order with Purchase Order And Button Below the Order Totals on the Checkout"/>
            <description value="Check Place Order with Purchase Order And Button Below the Order Totals on the Checkout"/>
            <severity value="CRITICAL"/>
            <testCaseId value="OSC-MFTF-48"/>
            <group value="Amasty"/>
            <group value="OSC"/>
            <group value="Checkout"/>
            <group value="OSCPaymentPurchaseOrder"/>
            <group value="OSCPaymentMethods"/>
        </annotations>

        <before>
            <!-- Login as admin -->
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin1"/>
            <!-- Configuration setting -->
            <actionGroup ref="AdminConfigurationSettingOSCGeneral" stepKey="ConfigurateGeneralSetting">
                <argument name="adminSettingOSCGeneral" value="SetOnlyEnableCheckout"/>
            </actionGroup>
            <actionGroup ref="AdminConfigurationSettingOSCPlaceButtonDesign" stepKey="ConfiguratePlaceButtonDesignSetting">
                <argument name="adminSettingOSCPlaceButtonDesign" value="BelowTheOrderTotalAndTurquoise"/>
            </actionGroup>
            <!-- Activate Payment Method -->
            <actionGroup ref="AdminActivatePurchaseOrder" stepKey="ActivatePurchaseOrderPayment"/>
        </before>

        <after>
            <!-- Return default setting -->
            <actionGroup ref="AdminDefaultConfigurationSettingOSCGeneral" stepKey="ReturnDefaultGeneralSetting"/>
            <actionGroup ref="AdminDefaultConfigurationSettingOSCPlaceButtonDesign" stepKey="ReturnDefaultPlaceButtonDesignSetting"/>
            <actionGroup ref="AdminReturnDefaultSettingPurchaseOrder" stepKey="ReturnDefaultPaymentSetting"/>
            <amOnPage url="admin/admin/auth/logout/" stepKey="amOnLogoutPage"/>
        </after>

        <!--Add Product to Cart-->
        <actionGroup ref="AddProductToCart" stepKey="AddFirstProductToCart">
            <argument name="addProductQty" value="_enterQty1"/>
            <argument name="products" value="_theWatchClamberData"/>
        </actionGroup>

        <actionGroup ref="GoToOSCAsGuestAndChooseShipping" stepKey="NavigateToOneStepCheckout">
            <argument name="customer" value="defaultCustomerOSCData"/>
            <argument name="shippingMethodsOnCheckout" value="FlatRateMethod"/>
        </actionGroup>

        <!-- Check Payment method -->
        <actionGroup ref="StorefrontOSCCheckPaymentMethod" stepKey="checkHavePurchaseOrder">
            <argument name="paymentMethods" value="paymentPurchaseOrder"/>
        </actionGroup>

        <!-- Check totals -->
        <actionGroup ref="StorefrontOSCCheckTotalsAndShippingPrice" stepKey="checkTotalsAndShipping">
            <argument name="oneStepCheckoutData" value="OSCCheckPurchaseOrderAndButtonBellowOrder"/>
        </actionGroup>

        <!-- Place Order -->
        <actionGroup ref="StorefrontOSCPlaceOrderBelowOrderWithPurchaseOrder" stepKey="PlaceOrder">
            <argument name="purchaseOrderNumber" value="OSCCheckPurchaseOrderAndButtonBellowOrder.purchaseOrderNumber"/>
        </actionGroup>
        <!-- Check Payment method in order-->
        <actionGroup ref="AdminCheckPaymentMethodInLastOrder" stepKey="checkPaymentInAdminOrder">
            <argument name="paymentMethods" value="paymentPurchaseOrder"/>
        </actionGroup>

        <!-- Check totals in order-->
        <actionGroup ref="AdminCheckTotalsInLastOrder" stepKey="CheckTotalsInAdminOrder">
            <argument name="subtotal" value="OSCCheckPurchaseOrderAndButtonBellowOrder.cartSubtotal"/>
            <argument name="grandTotal" value="OSCCheckPurchaseOrderAndButtonBellowOrder.orderTotal"/>
        </actionGroup>

    </test>
</tests>