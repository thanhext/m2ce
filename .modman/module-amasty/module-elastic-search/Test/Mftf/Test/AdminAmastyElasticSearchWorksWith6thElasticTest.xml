<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
     <test name="AdminAmastyElasticSearchWorksWith6thElasticTest" extends="AdminAmastyElasticSearchWorksWith7thElasticTest">
        <annotations>
            <title value="Check Amasty Elastic search can search a product with 6th elastic"/>
            <description value="Set up elastic 6 settings and search a product"/>
            <testCaseId value="AES-2"/>
            <severity value="MAJOR"/>
            <group value="Amasty"/>
            <group value="ElasticSearch"/>
        </annotations>
        <before>
            <remove keyForRemoval="loginAsAdmin"/>
        </before>
        <after>
            <remove keyForRemoval="logout"/>
        </after>
        <actionGroup ref="AdminElasticSearchSetConnectionSettingsWithCLIActionGroup" stepKey="setEsConnectionSettings">
            <argument name="AmastyEsSettingsCLI" value="AmastyElasticSearch6ConnectionConfigEntityCLI"/>
        </actionGroup>

        <actionGroup ref="AdminElasticSearchSetCatalogSettingsWithCLIActionGroup" stepKey="setCatalogSettings">
            <argument name="AmastyEsCatalogSettingsCLI" value="AmastyElasticSearchCardPlusOREntity"/>
        </actionGroup>
    </test>
</tests>